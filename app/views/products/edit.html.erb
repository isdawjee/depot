<% content_for :title, "Editing product" %>

<div class="w-full max-w-6xl mx-auto px-6 py-8">
  <% if notice.present? %>
    <div class="mb-10 p-4 border-l-4 border-black bg-gray-50 text-gray-800 shadow-sm rounded-r-lg" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-12 border-b border-gray-200 pb-6">
    <h1 class="text-4xl font-bold text-gray-900 tracking-tight">Editing product</h1>
    <div class="flex gap-4">
      <%= link_to "Show product", @product, class: "inline-flex items-center justify-center px-4 py-2 bg-black text-white font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-300 hover:bg-gray-800 transform hover:-translate-y-0.5" %>
      <%= link_to "Back to products", products_path, class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-gray-800 rounded-lg font-medium hover:border-gray-400 hover:bg-gray-50 transition-all duration-300 transform hover:-translate-y-0.5" %>
    </div>
  </div>

  <div class="bg-white shadow-sm border border-gray-100 rounded-lg p-8 mb-8">
    <%= render "form", product: @product %>
  </div>
</div>