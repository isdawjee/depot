<%= form_with(model: product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 px-6 py-4 font-medium rounded-lg border border-red-200 mb-6">
      <h2 class="text-lg font-semibold mb-2"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul class="list-disc ml-6 space-y-1">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-8">
    <%= form.label :title, class: "block text-gray-800 font-medium mb-2" %>
    <%= form.text_field :title, class: ["block w-full px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-900 shadow-sm transition-colors duration-200 focus:outline-none focus:border-black focus:ring-4 focus:ring-black/20", {"focus:ring-black/20": product.errors[:title].none?, "border-red-300 focus:border-red-500 focus:ring-red-500/30": product.errors[:title].any?}] %>
  </div>

  <div class="mb-8">
    <%= form.label :description, class: "block text-gray-800 font-medium mb-2" %>
    <%= form.text_area :description, rows: 10, class: ["block w-full px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-900 shadow-sm transition-colors duration-200 focus:outline-none focus:border-black focus:ring-4 focus:ring-black/20", {"focus:ring-black/20": product.errors[:description].none?, "border-red-300 focus:border-red-500 focus:ring-red-500/30": product.errors[:description].any?}] %>
  </div>

  <div class="mb-8">
    <%= form.label :image, class: "block text-gray-800 font-medium mb-2" %>
    <%= form.file_field :image, accept: "image/*", class: ["block w-full px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-900 shadow-sm transition-colors duration-200 focus:outline-none focus:border-black focus:ring-4 focus:ring-black/20", {"focus:ring-black/20": product.errors[:image].none?, "border-red-300 focus:border-red-500 focus:ring-red-500/30": product.errors[:image].any?}] %>
  </div>

  <div class="mb-8">
    <%= form.label :price, class: "block text-gray-800 font-medium mb-2" %>
    <%= form.text_field :price, class: ["block w-full px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-900 shadow-sm transition-colors duration-200 focus:outline-none focus:border-black focus:ring-4 focus:ring-black/20", {"focus:ring-black/20": product.errors[:price].none?, "border-red-300 focus:border-red-500 focus:ring-red-500/30": product.errors[:price].any?}] %>
  </div>

  <div class="mt-8">
    <%= form.submit class: "px-4 py-2 bg-black text-white font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-300 hover:bg-gray-800 cursor-pointer" %>
  </div>
<% end %>